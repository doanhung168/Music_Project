    <!--    Corner ImageView Style-->
    <style name="roundedCornersImageView">
        <item name="cornerSize">@dimen/below_medium_dimens</item>
    </style>

    <style name="borderImageView">
        <item name="strokeWidth">@dimen/line_dimens</item>
        <item name="strokeColor">@color/transparent_color</item>
    </style>


